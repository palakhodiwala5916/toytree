{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
        <div class="placeholder" style="color: #343232;">
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <i class="far fa-star"></i>
            <span class="small">({{ value }})</span>
        </div>

        <div class="overlay" style="position: relative;top: -24px;right: 2.8px">
            {% for i in 1..5 %}
                <span class="fa-stack" style="width:1.2em">
                {% if (value > 0) %}
                    {% if(value > 0.5) %}
                        <i class="fas fa-star fa-stack-1x" style="color: #FFA500;"></i>
                    {% else %}
                        <i class="fas fa-star-half fa-stack-1x" style="color: #FFA500;"></i>
                    {% endif %}
                {% endif %}
                {% set value = value - 1 %}
            </span>
            {% endfor %}
        </div>
{% endblock %}
